<h1>EAT DA BURGER!</h1>

<div class="orderBurger">
  <h2>Order a Burger!</h2>

  <form class="burger-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button class="submitBtn" type="submit">Order Burger!</button>

  </form>
</div>

<div class="orderedContainer container">
  <h2>Order up!</h2>

  <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
  </ul>
</div>

<div class="devouredContainer container">
  <h2>Devoured!</h2>

  <ul>
    {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-devoured devoured=true}}
        {{/if}}
    {{/each}}
  </ul>
</div>

